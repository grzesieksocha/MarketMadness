{% extends '::base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset("css/portfolio/listPortfolios.css") }}">
{% endblock %}

{% block body %}

    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
        {% include('AppBundle:include:sideBar.html.twig') %}
    {% endif %}
    <div class="col-md-8">
        <h2>Manage <em>{{ portfolio.name }}</em></h2>
        <h4>Difficulty: {{ portfolio.difficulty }} | Initial cash amount: {{ (portfolio.initialCashAmount/100)|number_format }} $</h4>

        <h3>Investment return:
            {% if return >= 0 %}
                <span class="green"> {{ return }}% </span></h3>
            {% else %}
                <span class="red"> {{ return }}% </span></h3>
            {% endif %}
        <h3>Cash available:</h3>
        {{ (portfolio.presentCashAmount/100)|number_format(2) }} $

        <h3>Holdings <a class="btn btn-success" href="{{ path('buyStock', {'portfolioId': portfolio.id}) }}">Buy</a></h3>

        {% if holdings %}
            <table class="table">
                <tr>
                    <th>Stock symbol</th>
                    <th>Quantity</th>
                    <th>Average cost</th>
                </tr>
                {% for holding in holdings %}
                    <tr>
                        <td>{{ holding.stockSymbol }}</td>
                        <td>{{ holding.stockQuantity }}</td>
                        <td>{{ holding.averageBuyPrice|number_format(2) }}</td>
                    </tr>
                {% endfor %}
            </table>
        {% else %}
            <p>You do not have any holdings yet!</p>
        {% endif %}

        <h3>Recent Transactions:</h3>

        {% if transactions %}
            <table class="table">
                <tr>
                    <th>Stock symbol</th>
                    <th>Quantity</th>
                    <th>Unit Price</th>
                    <th>Transaction Type</th>
                    <th></th>
                </tr>
                {% for transaction in transactions %}
                    <tr>
                        <td>{{ transaction.stockSymbol }}</td>
                        <td>{{ transaction.stockQuantity }}</td>
                        <td>{{ transaction.stockPrice|number_format(2) }}</td>
                        <td>{{ transaction.transactionType }}</td>
                        <td><a class="btn btn-default shareTransactionButton"
                               data-id="{{ transaction.id }}"
                               data-isshared="{% spaceless %}
                                   {% if transaction.isShared == false %}
                                        0
                                   {% elseif transaction.isShared == true %}
                                        1
                                   {% endif %}{% endspaceless %}"
                               href="#">
                                {% if transaction.isShared == false %}
                                    Share
                                {% elseif transaction.isShared == true %}
                                    Unshare
                                {% endif %}
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </table>
        {% else %}
            <p>You do not have any transactions yet!</p>
        {% endif %}
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/jquery-1.12.4.min.js') }}"></script>
    <script src="{{ asset('js/shareTransaction.js') }}"></script>
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
{% endblock %}
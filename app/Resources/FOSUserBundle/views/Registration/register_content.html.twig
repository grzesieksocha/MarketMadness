<div class="row">
    <div class="col-md-5 col-md-offset-1">
        <div class="form-group form">
        <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
            <h3 class="text-center">Register new user</h3>
            {{ form_start(form) }}
            {{ form_errors(form) }}

            {{ form_label(form.username, label|default(null), {'label_attr': {'class': 'registerLabel'}}) }}
            {{ form_errors(form.username) }}
            {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}

            {{ form_label(form.email, label|default(null), {'label_attr': {'class': 'registerLabel'}}) }}
            {{ form_errors(form.email) }}
            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}

            {{ form_label(form.plainPassword.first, label|default(null), {'label_attr': {'class': 'registerLabel'}}) }}
            {{ form_errors(form.plainPassword.first) }}
            {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}

            {{ form_label(form.plainPassword.second, label|default(null), {'label_attr': {'class': 'registerLabel'}}) }}
            {{ form_errors(form.plainPassword.second) }}
            {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}

            <input type="submit" class="btn btn-success registerSubmitButton" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" />
            {{ form_end(form) }}
        </form>
    </div>
    </div>
</div>
<div class="row">
    <div class="col-md-5 col-md-offset-1">
        <a class="btn btn-success" href="{{ path('homepage') }}">Back to homepage</a>
    </div>
</div>